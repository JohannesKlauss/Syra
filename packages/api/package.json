{
  "name": "@syra/api",
  "version": "0.0.1",
  "description": "",
  "author": "Johannes Klauss",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prisma:introspect": "prisma introspect",
    "prisma:generate": "rimraf ./prisma/generated && prisma generate"
  },
  "dependencies": {
    "@nestjs/common": "7.4.4",
    "@nestjs/config": "0.5.0",
    "@nestjs/core": "7.4.4",
    "@nestjs/graphql": "7.7.0",
    "@nestjs/jwt": "7.1.0",
    "@nestjs/passport": "7.1.0",
    "@nestjs/platform-fastify": "7.4.4",
    "@prisma/client": "2.9.0-dev.36",
    "apollo-server-fastify": "2.18.2",
    "bcrypt": "5.0.0",
    "class-validator": "0.12.2",
    "dotenv": "8.2.0",
    "graphql": "15.3.0",
    "graphql-fields": "2.0.3",
    "graphql-type-json": "0.3.2",
    "passport": "0.4.1",
    "passport-google-oauth20": "2.0.0",
    "passport-local": "1.0.0",
    "passport-jwt": "4.0.0",
    "passport-spotify": "1.1.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.6.3",
    "type-graphql": "1.0.0",
    "typegraphql-nestjs": "0.2.5",
    "typegraphql-prisma": "0.8.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
