{
  "name": "syra",
  "private": true,
  "workspaces": [
    "services/syra-*"
  ],
  "scripts": {
    "  --  LIVE - GQL/API --  ": "",
    "live-gql:start": "yarn workspace syra-live-gql start:dev",
    "live-gql:generate": "yarn workspace syra-live-gql prisma:generate",
    "live-gql:migrate": "yarn workspace syra-live-gql prisma:migrate",
    "live-gql:model-up": "yarn run live-gql:migrate && yarn run live-gql:generate",
    "  --  LIVE - FE --  ": "",
    "live-fe:start": "yarn workspace syra-live-fe dev",
    "live-fe:generate": "yarn workspace syra-live-fe gql-generate",
    "live-fe:build": "yarn workspace syra-live-fe build",
    "live-fe:storybook": "yarn workspace syra-live-fe storybook"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.19.0",
    "@graphql-codegen/typescript": "1.17.11",
    "@graphql-codegen/typescript-operations": "1.17.8",
    "@graphql-codegen/typescript-react-apollo": "2.0.7",
    "babel-loader": "8.1.0",
    "eslint": "7.12.1",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "prettier": "2.1.2"
  },
  "resolutions": {
    "@types/react": "16.9.55"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-native/all",
      "standard"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-native"
    ],
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect"
      }
    },
    "globals": {
      "__DEV__": false,
      "jasmine": false,
      "beforeAll": false,
      "afterAll": false,
      "beforeEach": false,
      "afterEach": false,
      "test": false,
      "expect": false,
      "describe": false,
      "jest": false,
      "it": false
    },
    "rules": {
      "no-unused-vars": 0,
      "no-undef": 0,
      "react/no-unescaped-entities": 0,
      "react/prop-types": "off",
      "react-native/no-raw-text": 0,
      "space-before-function-paren": 0,
      "@typescript-eslint/ban-ts-ignore": 0,
      "@typescript-eslint/explicit-member-accessibility": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-object-literal-type-assertion": 0,
      "@typescript-eslint/no-empty-interface": 0,
      "@typescript-eslint/no-var-requires": 0,
      "react": [
        "warn",
        {
          "additionalHooks": "useRecoilCallback"
        }
      ]
    }
  }
}
