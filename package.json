{
  "name": "syra",
  "private": true,
  "workspaces": [
    "services/syra-*"
  ],
  "scripts": {
    "  --  LIVE - GQL/API --  ": "",
    "live-gql:start": "yarn workspace syra-live-gql start:dev",
    "live-gql:generate": "yarn workspace syra-live-gql prisma:generate",
    "live-gql:migrate": "yarn workspace syra-live-gql prisma:migrate",
    "live-gql:model-up": "yarn run live-gql:migrate && yarn run live-gql:generate",
    "  --  LIVE - FE --  ": "",
    "live-fe:start": "yarn workspace syra-live-fe dev",
    "live-fe:generate": "yarn workspace syra-live-fe gql-generate",
    "live-fe:build": "yarn workspace syra-live-fe build",
    "live-fe:storybook": "yarn workspace syra-live-fe storybook",
    "  --  DAW  - FE --  ": "",
    "daw-fe:start": "yarn workspace syra-daw-fe start",
    "daw-fe:generate": "yarn workspace syra-daw-fe gql-generate",
    "daw-fe:test": "yarn workspace syra-daw-fe test",
    "daw-fe:storybook": "yarn workspace syra-daw-fe storybook"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.2",
    "@graphql-codegen/typescript": "1.21.1",
    "@graphql-codegen/typescript-operations": "1.17.15",
    "@graphql-codegen/typescript-react-apollo": "2.2.2",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.32",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "4.16.1",
    "babel-eslint": "10.1.0",
    "babel-loader": "8.2.2",
    "eslint": "7.21.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-flowtype": "5.3.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.22.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "prettier": "2.2.1"
  },
  "resolutions": {
    "@chakra-ui/react": "1.3.4",
    "@emotion/react": "11.1.5",
    "@emotion/styled": "11.1.5",
    "@types/react": "17.0.3",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "4.16.1",
    "eslint": "7.21.0",
    "framer-motion": "3.10.0",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "prettier",
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended",
      "plugin:react-native/all",
      "standard"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-native"
    ],
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect"
      }
    },
    "globals": {
      "__DEV__": false,
      "jasmine": false,
      "beforeAll": false,
      "afterAll": false,
      "beforeEach": false,
      "afterEach": false,
      "test": false,
      "expect": false,
      "describe": false,
      "jest": false,
      "it": false
    },
    "rules": {
      "no-unused-vars": 0,
      "no-undef": 0,
      "react/no-unescaped-entities": 0,
      "react/prop-types": "off",
      "react-native/no-raw-text": 0,
      "space-before-function-paren": 0,
      "@typescript-eslint/ban-ts-ignore": 0,
      "@typescript-eslint/explicit-member-accessibility": 0,
      "@typescript-eslint/explicit-function-return-type": 0,
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-object-literal-type-assertion": 0,
      "@typescript-eslint/no-empty-interface": 0,
      "@typescript-eslint/no-var-requires": 0,
      "react": [
        "warn",
        {
          "additionalHooks": "useRecoilCallback"
        }
      ]
    }
  }
}
